<div class="container">
    <h1>Nuevo Cliente</h1>

    <form>
        <div class="form-group">
            <label for="name">Nombres:</label>
            <input type="text" id="nombre" class="form-control" name="name" placeholder="Dkreier Radariz">
        </div>
        <div class="form-group">
            <label for="price">Tipo de documento:</label>
            <select class="form-control" id="tipoDoc">
                <option value="" selected disabled>Tipo de documento</option>
                <option value="CC" selected>Cédula de Ciudadanía</option>
                <option value="TI">Tarjeta de Identidad</option>
                <option value="CE">Cédula de Extranjería</option>
                <option value="PAS">Pasaporte</option>
                <option value="NIT">NIT</option>

            </select>
        </div>
        <div class="form-group">
            <label for="name">Número de documento:</label>
            <input type="number" id="documento" class="form-control" name="documento" placeholder="100003915">
        </div>
        <div class="form-group">
            <label for="count">Dirección:</label>
            <input type="string" id="direccion" class="form-control" name="direccion" placeholder="KR 32 # 43-21">
        </div>
        <div class="form-group">
            <label for="count">Teléfono:</label>
            <input type="number" id="telefono" class="form-control" name="telefono" placeholder="315965848">
        </div>
        <div class="form-group">
            <label for="count">Correo:</label>
            <input type="email" id="correo" class="form-control" name="correo" placeholder="dkrier@gmail.com">
        </div>
        <div class="form-group">
            <label for="count">Estado:</label>
            <input type="string" id="estado" class="form-control" name="estado" placeholder="EN PRESTAMO">
        </div>
        <a asp-area="" asp-controller="Clientes" asp-action="ModalEdite">
            <button type="button" class="btn btn-success mt-5">Guardar actualización de Cliente</button>
        </a>
    </form>
</div>